<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/qwestion"
        android:layout_width="312dp"
        android:layout_height="28dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="21dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/answer"
        android:layout_width="321dp"
        android:layout_height="50dp"
        android:layout_marginBottom="111dp"
        android:ems="10"
        android:inputType="textCapSentences"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:hint="@string/game_answer"
        app:layout_constraintBottom_toTopOf="@+id/wheelGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="229dp"
        android:layout_height="57dp"
        android:layout_marginBottom="32dp"
        android:text="@string/game_button"
        android:onClick="speenWheel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/wheelGame"
        android:layout_width="238dp"
        android:layout_height="252dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="164dp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/playerOne"
        android:layout_width="56dp"
        android:layout_height="58dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/playerTwo"
        app:layout_constraintEnd_toStartOf="@+id/wheelGame"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_off" />

    <ImageView
        android:id="@+id/playerTwo"
        android:layout_width="54dp"
        android:layout_height="56dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="31dp"
        app:layout_constraintBottom_toTopOf="@+id/playerThree"
        app:layout_constraintEnd_toStartOf="@+id/wheelGame"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_off" />

    <ImageView
        android:id="@+id/playerThree"
        android:layout_width="56dp"
        android:layout_height="54dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="280dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/wheelGame"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_off" />

</androidx.constraintlayout.widget.ConstraintLayout>